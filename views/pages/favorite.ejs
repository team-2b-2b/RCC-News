<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Later</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/favourite.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <header>
        <div id="header">
            <div id="logo">
                <img src="img/logo1.png" alt="">
            </div>
            <nav>
                <ul>
                    <li><a href="/index">Home</a></li>
                    <div class="dropdown">
                        <li class="droplist"><a>Categories</a></li>
                        <div class="dropdown-content">
                            <a href="/news">Politics News</a>
                            <a href="/sport">Sport News</a>
                            <a href="/health">Health News</a>
                            <a href="/tech">Technology News</a>
                        </div>
                    </div>
                    <li><a href="/favorite">Read Later</a></li>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
            </nav>
            <form class="formSearch" action="/tosearch" method="post">
                <input class="searchHome" type="text" name='search' placeholder="Search For Country News..." required>
                <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
    </header>
    <main>
        <article>
            <section class="userInfo">
                <div class="basicInfo">
                    <img src="<%= signin[1] %>" alt="" class="user2">
                    <h4><%= signin[0] %></h4>
                </div>

                <form action="/signout" class="logoutBar" method="post">
                    <input type="submit" id="signIn" class="logoutButton" value="Sign Out">
                </form>

                <div class="saidBarNav">
                  
                    <nav id="footerNav" class="userNav">
                        <ul>
                            <li><a href="/index">Home</a></li>
                            <li><a href="/news">Politics News</a></li>
                            <li><a href="/sport">Sport News</a></li>
                            <li><a href="/health">Health News</a></li>
                            <li><a href="/tech">Technology News</a></li>
                            <li><a href="/favourite">Read Later</a></li>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="">About</a></li>
                        </ul>
                    </nav>
                </div>
            </section>
            <section id="allNews">
                <% if(results.length != 0){ %>
                <div class="savedCounter">
                    <h2>You Saved <span class="savednum"><%= results.length %></span> Item</h2>

                </div>
                <% results.forEach(elem => { %>
                <div class="container">
                    <div class="categ-fav">
                        <h2><%= elem.category %></h2>
                        <form class="delete-button" action="/deletefav?_method=delete" method="post">
                            <input class="hidden" type="text" name="id" value="<%= elem.id %>">
                            <button class="remove-button">X</button>
                        </form>
                    </div>
                    <div class="news">
                        <img src="<%= elem.urltoimage %>" alt="">
                        <div class="info">
                            <h3><%= elem.title %></h3>
                            <p class="date"><%= elem.publishedat %></p>
                            <h4><%= elem.author %></h4>

                            <p class="desc"><%= elem.content%></p>
                            <button class="readMore"><a href="<%=elem.url%>">Read More</a></button>

                        </div>
                    </div>
                </div>
                <% }) %>
                <% } %>

                <% if (results.length == 0){ %>
                <div class="container" id="emptyfav">
                    <h2>You didn't add any thing :( </h2>
                </div>
                <% } %>
            </section>
        </article>
    </main>
    <footer>
        <div id="footer">
            <nav id="footerNav">
                <ul>
                    <li><a href="/politics">Politics News</a></li>
                    <li><a href="/sport">Sport News</a></li>
                    <li><a href="/health">Health News</a></li>
                    <li><a href="/tech">Technology News</a></li>
                    <li><a href="">About</a></li>
                </ul>
            </nav>
            <nav id="logo1">
                <img src="img/logo1.png" alt="">
                <ul>
                    <li class="contact">
                        <img src="img/phone.png">
                        <p>+9627770004567</p>
                    </li>
                    <li class="contact">
                        <img src="img/email.png">
                        <p>rcc2020@info.com</p>
                    </li>
                </ul>
            </nav>
            <div id='footerIcons'>
                <a href="https://web.facebook.com/" target="_blank" class="fa fa-facebook"></a>
                <a href="https://web.twitter.com/" target="_blank" class="fa fa-twitter"></a>
                <a href="https://web.youtube.com/" target="_blank" class="fa fa-youtube"></a>
                <a href="https://web.instagram.com/" target="_blank" class="fa fa-instagram"></a>
                <a href="https://web.linkedin.com/" target="_blank" class="fa fa-linkedin"></a>

            </div>
        </div>
        <div id="copy">
            <hr>
            <p>RCC News &copy; 2020 &middot; All Copyrights are reserved</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="app.js"></script>
</body>

</html>