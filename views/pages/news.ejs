<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Politics News</title>
    <link rel="stylesheet" href="css/news.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <header>
        <div id="header">
            <div id="logo">
                <img src="img/logo1.png" alt="">
            </div>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <div class="dropdown">
                        <li class="droplist"><a>Categories</a></li>
                        <div class="dropdown-content">
                            <!-- <a href="">Jordan News</a> -->
                            <a href="/news">Politics News</a>
                            <a href="/sport">Sport News</a>
                            <a href="/health">Health News</a>
                            <a href="/tech">Technology News</a>
                            <!-- <a href="">Fake News</a> -->
                        </div>
                    </div>
                    <li><a href="">Read Later</a></li>
                    <li><a href="">Dashboard</a></li>
                    <li><a href="">About</a></li>
                </ul>
            </nav>
            <form class="formSearch" action="/tosearch" method="post">
                <input class="searchHome" type="text" placeholder="Search For Country News..." required>
                <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
    </header>
    <main>
        <div id="heroContainer">
            <div id="titleContainer">
                <h1 id="title">Politics News</h1>
            </div>
        </div>
        <article>
            <section class="userInfo">
                <div class="basicInfo">
                    <img src="img/user.JPG" alt="" class="user1">
                    <h4>RCC-user</h4>
                </div>
                
                <form action="/signout" method="post"> 
                    <input type="submit" id="signIn" value="Sign Out">
                </form>
            </section>
            <section id="allNews">
                <% newsData.forEach ((item,ind) => { %>
                <div class="container">
                    <div class="news">
                        <img src="<%= item.urlToImage %>" alt="">
                        <div class="info">
                            <h3><%= item.title %></h3>
                            <p class="date"><%= item.publishedAt %></p>
                            <h4><%= item.author %></h4>
                            <p class="desc"><%= item.content %></p>
                        </div>
                    </div>
                    <div class="buttons">
                        <button class="readMore"><a href="<%=item.url%>">Read More</a></button>
                        <form action="/addfavorite" method="post" class="form">
                            <input class="hidden" type="text" id="category" name="category" value="Politics News"><br>
                            <input class="hidden" type="text" id="urlToImage" name="urlToImage"
                                value="<%= item.urlToImage %>"><br>
                            <input class="hidden" type="text" id="author" name="author" value="<%= item.author %>"><br>
                            <input class="hidden" type="text" id="title" name="title" value="<%= item.title %>"><br>
                            <input class="hidden" type="text" id="url" name="url" value="<%= item.url %>"><br>
                            <input class="hidden" type="text" id="publishedAt" name="publishedAt"
                                value="<%= item.publishedAt %>"><br>
                            <input class="hidden" type="text" id="content" name="content"
                                value="<%= item.content %>"><br>

                            <button class="readMore">Read Later</button>
                        </form>
                    </div>
                    <div class="commentBox">
                        <!-- <label for="example">Add a comment</label> -->
                        <div class="newComments">
                            <img src="img/user.JPG" alt="" class="user1">
                            <form action="/comments/<%= ind %>" class="addComment" method="post">
                                <input id="comment<%= ind%>" class="commentPlace" placeholder="Add your comment..."
                                    type="text" name="Ntext" size="20">
                                <input type="submit" class="commentsButton" name="<%= ind%>" value="Comment">
                            </form>
                        </div>
                        <ul class="comments" id="<%= ind%>W">

                            <% results.forEach (item2 => { %>

                            <% if(item2.post == ind){ %>
                            <li class="user">
                                <img src="img/user.JPG" alt="">
                                <div class="userComment">
                                    <h3>RCC-user</h3>
                                    <p><%= item2.comment; %></p>
                                </div>
                            </li>
                            <% }}); %>


                        </ul>
                    </div>
                </div>
                <% }); %>
            </section>
        </article>



    </main>
    <footer>
        <div id="footer">
            <nav id="footerNav">
                <ul>
                    <li><a href="/politics">Politics News</a></li>
                    <li><a href="/sport">Sport News</a></li>
                    <li><a href="/health">Health News</a></li>
                    <li><a href="/tech">Technology News</a></li>
                    <li><a href="">About</a></li>
                </ul>
            </nav>
            <nav id="logo1">
                <img src="img/logo1.png" alt="">
                <ul>
                    <li class="contact">
                        <img src="img/phone.png">
                        <p>+9627770004567</p>
                    </li>
                    <li class="contact">
                        <img src="img/email.png">
                        <p>rcc2020@info.com</p>
                    </li>
                </ul>
            </nav>
            <div id='footerIcons'>
                <a href="https://web.facebook.com/" target="_blank" class="fa fa-facebook"></a>
                <a href="https://web.twitter.com/" target="_blank" class="fa fa-twitter"></a>
                <a href="https://web.youtube.com/" target="_blank" class="fa fa-youtube"></a>
                <a href="https://web.instagram.com/" target="_blank" class="fa fa-instagram"></a>
                <a href="https://web.linkedin.com/" target="_blank" class="fa fa-linkedin"></a>

            </div>
        </div>
        <div id="copy">
            <hr>
            <p>RCC News &copy; 2020 &middot; All Copyrights are reserved</p>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="app.js"></script>
</body>

</html>